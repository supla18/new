import java.awt.*;
import java.applet.*;

public class Line extends Applet
{
    public void paint(Graphics g)
    {
        g.drawLine(10, 50, 380, 50);
        g.drawRect(10, 80, 200, 100);
        g.drawOval(10, 200, 200, 80);

        g.setColor(Color.RED);
        g.drawString("Welcome to E&TC Department", 15, 15);

        g.fillRect(10, 80, 200, 100);

        g.setColor(Color.PINK);
        g.fillOval(10, 200, 200, 80);
    }
}

<html>
<title> My First applet </title>
<body>
<applet code ="Line.class" width=500 height=600>
</applet>
</body>
</html>
